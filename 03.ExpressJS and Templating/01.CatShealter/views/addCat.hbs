<body>
    <main>
        <form action="#" method="" class="cat-form" enctype="multipart/form-data">
            <h2>Add Cat</h2>
            <label for="name">Name</label>
            <input name="name" type="text" id="name">
            <label for="description">Description</label>
            <textarea name="description" id="description"></textarea>
            <label for="image">Image</label>
            <input name="upload" type="file" id="image">
            <label for="group">Breed</label>
            <select name="breed" id="group">
                {{#each breeds}}
                <option value="{{this}}">{{this}}</option>
                {{/each}}
            </select>
            <button type="submit" id="add">Add Cat</button>
        </form>
    </main>
</body>

<script>
    document.getElementById('add').addEventListener('click', async(e)=> { 
        e.preventDefault()
        const name = document.getElementById('name').value
        const desc = document.getElementById('description').value
        const breed = document.getElementById('group').value
        console.log(name,desc,breed)
        const res = await fetch('http://localhost:3000/cat', {
            method: "POST",
            body: JSON.stringify({name, desc, breed}),
            headers: { 'Content-Type': 'application/json' },
        })
    })

</script>