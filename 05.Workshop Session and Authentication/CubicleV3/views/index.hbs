<h1>Browser</h1>
<form action='/' method='GET'>
    <input
        type='text'
        class='search'
        name='search'
        placeholder='Search...'
        value='{{search}}'
    />
    <input
        type='number'
        name='from'
        class='difficulty'
        placeholder='Difficulty from...'
        value='{{from}}'
    />
    <span>-</span>
    <input
        type='number'
        name='to'
        class='difficulty'
        placeholder='Difficulty to...'
        value='{{to}}'
    />
    <input type='submit' value='search' />
</form>
{{#each cubes}}
    <div class='cube'>
        <img class='cube' src='{{imageUrl}}' />
        <p class='name'>{{name}}</p>
        <p><span>Difficulty level:</span>{{difficulty}}</p>
        <a class='btn' href='/cubes/details/{{_id}}'>Details</a>
    </div>
{{else}}
    <h3 class='italic'>No cubes with the specific search found in the database</h3>
{{/each}}